const N=5
range R=0..N-1


SARD = SARD[0],
SARD[h:0..1] = (when (h==0) get->SARD[1]
 		| put->SARD[0]).
FIL(I=0) = (eseri->
if (I%2==1) then (ezker.get ->eskubi.get->JAN)
 else (eskubi.get->ezker.get ->JAN)
 ),
JAN = (jan->ezker.put->eskubi.put->altxatu->FIL).
||AFARIA=forall[i:R]
(fil[i]:FIL(i) ||
{fil[i].ezker,fil[((i-1)+N)%N].eskubi}::SARD ).
