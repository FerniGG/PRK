const BK = 3
const LM = 3
range LER=0..LM
range BR = 1..BK
BASATIA = (hartu->jan->lo->BASATIA).
SUKALDARIA = (bete->SUKALDARIA).
KONTROLATZAILEA = LAPIKO[LM],
LAPIKO[kop:LER] =( when(kop<=LM) 	hartu->KONTROL[kop-1]
